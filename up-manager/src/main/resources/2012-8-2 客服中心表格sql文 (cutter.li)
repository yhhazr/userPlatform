use db_userplatform;
DROP TABLE IF EXISTS `dt_faqs`;
DROP TABLE IF EXISTS `dt_site_info`;
DROP TABLE IF EXISTS `dt_faq_kind`;
CREATE TABLE `dt_faqs` (
  `id` int(11) NOT NULL auto_increment COMMENT '标识主键',
  `cid` int(11) NOT NULL default '0' COMMENT '分类编号',
  `question` varchar(200) default '无' COMMENT '问题',
  `answer` varchar(500) default '无' COMMENT '答案',
  `visitSum` int(11) default '0' COMMENT '访问次数',
  `sortNum` int(11) default '0' COMMENT '排序号',
  PRIMARY KEY  (`id`)
) ENGINE=MyISAM AUTO_INCREMENT=10 DEFAULT CHARSET=utf8;


CREATE TABLE `dt_faq_kind` (
  `id` int(11) NOT NULL auto_increment COMMENT '主键标识',
  `name` varchar(20) default '无' COMMENT '种类名称',
  `ext` varchar(50) default '无' COMMENT '详细说明',
  `parentId` int(11) default '0' COMMENT '父ID',
  `sortNo` int(11) default '0' COMMENT '种类的显示顺序',
  PRIMARY KEY  (`id`)
) ENGINE=InnoDB AUTO_INCREMENT=23 DEFAULT CHARSET=utf8 COMMENT='FAQ kind';


CREATE TABLE `dt_site_info` (
  `id` int(11) NOT NULL auto_increment COMMENT '主键标识ID',
  `name` varchar(50) default '无' COMMENT '名称',
  `text` varchar(200) default '无' COMMENT '内容',
  `ext` varchar(50) default '无' COMMENT '说明',
  PRIMARY KEY  (`id`),
  KEY `infoName` (`name`)
) ENGINE=MyISAM AUTO_INCREMENT=41 DEFAULT CHARSET=utf8;

